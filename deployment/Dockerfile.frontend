## Frontend Dockerfile: builds and runs Next.js SSR app
FROM node:18-alpine AS builder
WORKDIR /app
COPY admin-ui/package*.json ./
RUN npm install --production
COPY admin-ui .
RUN npm run build

FROM node:18-alpine AS runner
WORKDIR /app
COPY --from=builder /app .
EXPOSE 3000
CMD ["npm", "run", "start"]